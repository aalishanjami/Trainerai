<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/rl_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/text_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_message_profile"
            android:text="John Doe" />

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_message_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/image_message_profile"
            android:background="@drawable/rounded_rectangle_orange"
            android:maxWidth="300dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="hi man, how are you?"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_message_body"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/image_message_profile"
            android:text="11:40"
            android:textSize="10sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_message_profile_s"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/text_message_name_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_message_profile_s"
            android:text="You" />

        <TextView
            android:id="@+id/text_message_body_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_message_name_S"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/image_message_profile_s"
            android:background="@drawable/rounded_rectangle_green"
            android:maxWidth="300dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="Hi man how are uo"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_message_time_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_message_body_S"
            android:layout_marginLeft="4dp"
            android:layout_toLeftOf="@id/image_message_profile_s"
            android:text="11:40"
            android:textSize="10sp" />
    </RelativeLayout>



</RelativeLayout>